{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug TypeScript (ts-node)",
        "type": "node",
        "request": "launch",
        "runtimeArgs": [
          "--inspect",
          "-r",
          "ts-node/register"
        ],
        "args": [
          "${workspaceFolder}/src/app.ts"
        ],
        "cwd": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
  